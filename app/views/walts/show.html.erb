<div class="walt">
  <p><%= @walt.title %></p>
  <p><%= @walt.about %></p>
  <%= image_tag @walt.image_url, size: "250x200" if @walt.image? %>
  <p><%= @walt.created_at %></p>
</div>
    <%= link_to "編集する", edit_walt_path(@walt.id) %>
    <%= button_to "削除する", walt_path(@walt.id), method: :delete %> 
  <br>

  <h2>おすすめ度：
  <span class="star-rating">
    <span class="star-rating-front" style="width: <%= getPercent(@walt.overall) %>%;">★★★★★</span>
    <span class="star-rating-back">★★★★★</span>
  </span> 
</h2>


<% @walt.tags.each do |tag| %>
  <span><%= tag.name %></span>
<% end %>
<%= link_to "一覧に戻る", walts_path %>


